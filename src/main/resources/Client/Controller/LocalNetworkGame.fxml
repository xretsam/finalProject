<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="960.0" styleClass="main-background" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Controller.LocalNetworkGameController">
   <children>
      <Button fx:id="playAsHostBT" layoutX="103.0" layoutY="280.0" mnemonicParsing="false" onAction="#playAsHost" prefHeight="161.0" prefWidth="313.0" styleClass="round-button" text="PLAY AS A HOST">
         <font>
            <Font name="DejaVu Sans Bold" size="18.0" />
         </font></Button>
      <Button fx:id="playAsGuestBT" layoutX="554.0" layoutY="280.0" mnemonicParsing="false" onAction="#playAsGuest" prefHeight="161.0" prefWidth="313.0" styleClass="round-button" text="PLAY AS A GUEST">
         <font>
            <Font name="DejaVu Sans Bold" size="18.0" />
         </font></Button>
      <Label fx:id="localLabel" alignment="CENTER" layoutX="291.0" layoutY="91.0" prefHeight="144.0" prefWidth="379.0" text="LOCAL NETWORK GAME" textFill="#817a9e">
         <font>
            <Font name="DejaVu Sans Bold" size="24.0" />
         </font>
      </Label>
      <Button fx:id="returnBT" layoutX="800.0" layoutY="50.0" mnemonicParsing="false" onAction="#onReturnBTAction" prefHeight="35.0" prefWidth="100.0" styleClass="round-button" text="Return">
         <font>
            <Font name="DejaVu Sans Bold" size="13.0" />
         </font>
      </Button>
      <AnchorPane fx:id="waitingDialog" layoutX="290.0" layoutY="200.0" prefHeight="300.0" prefWidth="400.0" styleClass="dark-anchorPane" visible="false">
         <children>
            <Button layoutX="158.0" layoutY="229.0" mnemonicParsing="false" onAction="#onCancelAction" prefHeight="26.0" prefWidth="84.0" styleClass="round-button" text="Cancel" />
            <Label alignment="CENTER" layoutX="11.0" layoutY="53.0" prefHeight="144.0" prefWidth="379.0" text="WAITING FOR A GAME" textFill="#817a9e">
               <font>
                  <Font name="DejaVu Sans Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
